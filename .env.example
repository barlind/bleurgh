# Example environment configuration
# Copy this to .env and fill in your values

# Required: Your Fastly API token
# Get one from: https://manage.fastly.com/account/personal/tokens
FASTLY_TOKEN=your-fastly-api-token-here

# Optional: Service IDs for each environment (comma-separated)
FASTLY_DEV_SERVICE_IDS=dev-service-id-1,dev-service-id-2
FASTLY_TEST_SERVICE_IDS=test-service-id-1,test-service-id-2
FASTLY_PROD_SERVICE_IDS=prod-service-id-1,prod-service-id-2

# Optional: Friendly service names for display (should match service IDs order)
FASTLY_DEV_SERVICE_NAMES=Dev Frontend,Dev API
FASTLY_TEST_SERVICE_NAMES=Test Frontend,Test API
FASTLY_PROD_SERVICE_NAMES=Production Frontend,Production API

# Optional: Default keys to always include in purge operations
FASTLY_DEFAULT_KEYS=global,always
