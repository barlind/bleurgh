{
  "name": "bleurgh",
  "version": "1.1.4",
  "description": "CLI tool for purging Fastly cache by surrogate keys across multiple environments",
  "type": "module",
  "bin": {
    "bleurgh": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "fastly",
    "cache",
    "purge",
    "cdn",
    "cli"
  ],
  "author": "barlind",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/barlind/bleurgh.git"
  },
  "bugs": {
    "url": "https://github.com/barlind/bleurgh/issues"
  },
  "homepage": "https://github.com/barlind/bleurgh#readme",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.4.1",
    "shescape": "^2.1.5",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@types/yargs": "^17.0.32",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ]
}
